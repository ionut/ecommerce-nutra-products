{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "smallDescription": {
      "type": "string"
    },
    "additionalInfo": {
      "type": "text"
    },
    "tag": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "imgmain": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "salePrice": {
      "type": "decimal"
    },
    "isNew": {
      "type": "boolean",
      "default": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Bundle",
        "Gel",
        "Tablets"
      ]
    },
    "listDescription": {
      "type": "customField",
      "options": [
        "All Natural Ingredients",
        "Laboratory Tested",
        "Vegan Friendly",
        "Gluten Free",
        "Bigger Results"
      ],
      "customField": "plugin::multi-select.multi-select"
    }
  }
}
